{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 26,
		"patch": 0
	},
	"configurePresets": [
		{
			"hidden": true,
			"name": "enableTracyProfiling",
			"cacheVariables": {
				"ENABLE_NANO_PROFILE": true
			}
		},
		{
			"name": "vcpkg",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "x64-windows-mixed"
			},
			"hidden": true
		},
		{
			"name": "libPaths",
			"cacheVariables": {
				"OptiX_ROOT_DIR": {
					"type": "FILE",
					"value": "$env{OPTIX_PATH}"
				},
				"TBB_INCLUDE_DIR": {
					"type": "PATH",
					"value": "$env{TBB_PATH}/include"
				}
			},
			"hidden": true
		},
		{
			"name": "msvc",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			},
			"hidden": true
		},
		{
			"name": "x64",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"hidden": true
		},
		{
			"name": "debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"hidden": true
		},
		{
			"name": "release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
			},
			"hidden": true
		},
		{
			"name": "sanitizers",
			"environment": {
				"CFLAGS": "/fsanitize=fuzzer",
				"CXXFLAGS": "/fsanitize=fuzzer"
			},
			"cacheVariables": {
				"ENABLE_NANO_SANITIZERS": true
			},
			"hidden": true
		},
		{
			"name": "base",
			"description": "Target Windows with the Visual Studio development environment.",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"installDir": "${sourceDir}/out/install/${presetName}",
			"cacheVariables": {
				"CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "x64-debug",
			"displayName": "x64 Debug",
			"description": "",
			"inherits": [ "base", "x64", "msvc", "debug", "vcpkg", "libPaths" ]
		},
		{
			"name": "x64-release",
			"description": "",
			"displayName": "x64 Release",
			"inherits": [ "base", "x64", "msvc", "release", "vcpkg", "libPaths" ]
		},
		{
			"name": "x64-release-profiling",
			"description": "",
			"displayName": "x64 Release",
			"inherits": [ "base", "x64", "msvc", "release", "vcpkg", "libPaths", "enableTracyProfiling" ]
		},
		{
			"name": "x64-debug-profiling",
			"description": "",
			"displayName": "x64 Debug",
			"inherits": [ "base", "x64", "msvc", "debug", "vcpkg", "libPaths", "enableTracyProfiling" ]
		}
	],
	"buildPresets": [
		{
			"name": "Debug",
			"displayName": "Debug",
			"description": "Debug configuration.",
			"configurePreset": "x64-debug"
		},
		{
			"name": "Release",
			"displayName": "Release",
			"description": "Release configuration.",
			"configurePreset": "x64-release"
		},
		{
			"name": "Release Profiling",
			"displayName": "Release Profiling",
			"description": "Release configuration with enabled Tracy profiling.",
			"configurePreset": "x64-release-profiling"
		},
		{
			"name": "Debug Profiling",
			"displayName": "Debug Profiling",
			"description": "Debug configuration with enabled Tracy profiling.",
			"configurePreset": "x64-debug-profiling"
		}
	]
}
